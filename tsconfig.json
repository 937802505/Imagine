{
  "compilerOptions": {
    "sourceMap": false,
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./lib/",
    "skipLibCheck": true
  },
  "include": [
    "modules/**/*",
    "types/**/*"
  ]
}

